params {
    project = false
    bed = false
    ref = false
    design = false
    test = false
    index = false
    binDir = false
    batch = false
}

executor {
  $slurm {
      queueSize = 1000
      pollInterval = '30sec'
      submitRateLimit = '100 sec'
  }

  $lsf {
      queueSize = 1000
      pollInterval = '30sec'
      submitRateLimit = '100 sec'
  }
}

profiles {

    standard {
        process.cpus = 1
        process.memory = "2.GB"
        process.container = "smshuai/cnest:dev2"
        process.errorStrategy = { task.exitStatus in [403, 401] ? 'ignore' : 'terminate' }
        docker.enabled = true
    }

    slurm {
        process.executor = 'slurm'
        process.cpus = 1
        process.memory = "2.GB"
        process.container = 'docker://smshuai/cnest:dev2'
        singularity.enabled = true
    }

    lsf {
        process.executor = 'lsf'
        process.cpus = 1
        process.memory = "2.GB"
        process.container = 'docker://smshuai/cnest:dev2'
        singularity.enabled = true
    }

}

