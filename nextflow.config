params {
    project = false
    bed = false
    ref = false
    design = false
    test = false
    index = false
    bindir = false
    binlist = false
    rbindir = false
    cordir = false
    gender = false
    cov = false
    batch = false
    help = false
    samples = false
    wgs = false
}

executor {
  $slurm {
      queueSize = 1000
      pollInterval = '30sec'
      submitRateLimit = '100 sec'
  }

  $lsf {
      queueSize = 1000
      pollInterval = '30sec'
      submitRateLimit = '100 sec'
  }
}

profiles {

    standard {
        process.cpus = 1
        process.memory = "2.GB"
        process.container = "smshuai/cnest:dev2"
        process.maxForks = 45
        docker.enabled = true
    }

    slurm {
        process.executor = 'slurm'
        process.cpus = 1
        process.memory = "2.GB"
		process.time = "1h"
        process.container = 'docker://smshuai/cnest:dev2'
        singularity.enabled = true
		singularity.autoMounts = true
    }

    lsf {
        process.executor = 'lsf'
        process.cpus = 1
        process.memory = "2.GB"
        process.time = "1h"
        process.container = 'docker://smshuai/cnest:dev2'
        singularity.enabled = true
        singularity.autoMounts = true
        singularity.runOptions = ' --contain -B "$PWD:$PWD" --pwd "$PWD" '
    }

}

